{
  "name": "gh-issues-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:build-deploy": "pnpm run pages:build && pnpm run pages:deploy",
    "pages:deploy": "wrangler pages deploy .vercel/output/static",
    "pages:watch": "npx @cloudflare/next-on-pages --watch",
    "pages:dev": "npx wrangler pages dev .vercel/output/static --compatibility-flag=nodejs_compat",
    "db:push": "set -a; source .env.local; set +a && drizzle-kit push:sqlite"
  },
  "type": "module",
  "dependencies": {
    "@libsql/client": "^0.2.2",
    "@primer/octicons-react": "^19.4.0",
    "@t3-oss/env-nextjs": "^0.4.1",
    "@types/node": "20.3.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "drizzle-orm": "^0.27.0",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "next": "13.4.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.1.0",
    "@types/better-sqlite3": "^7.6.4",
    "autoprefixer": "10.4.14",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.2",
    "postcss": "8.4.24",
    "tailwindcss": "3.3.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "vercel": "^30.2.3",
    "wrangler": "^3.1.1"
  }
}
